{
    "name": "SOHint",
    "version": "0.0.2",
    "manifest_version": 2,
    "description": "Stack Overflow Hints in Google Results",
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "default_locale": "en",
    "permissions" :[
        "tabs",
        "activeTab",
        "http://*.google.com/", 
        "https://*.google.com/"
    ],
    "background": {
        "scripts": [
            "scripts/background.js"
        ]
    },
    "page_action": {
        "default_icon": {
            "19": "images/icon-19.png",
            "38": "images/icon-38.png"
        },
        "default_title": "SOHint"
    },
    "options_page": "options.html",
    "content_scripts": [
        {
            "matches": [
                "http://*.google.com/", 
                "https://*.google.com/"
            ],
            "css": [
                "styles/main.css"
            ],
            "js": [
                "bower_components/jquery/jquery.js",
                "bower_components/underscore/underscore.js",
                "bower_components/handlebars/handlebars.js",
                "scripts/contentscript.js"
            ],
            "run_at": "document_end",
            "all_frames": false
        }
    ]
}